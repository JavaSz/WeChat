.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom:5px; 
}

.post-author-date{
   /* margin-top:10rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx;
    上 右 下 左*/ 
     margin: 10rpx 0 20rpx 10rpx; 
    /* display: flex;
    flex-direction: row; */
}

.post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle; /*垂直居中排布*/ 
}

.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    font-size: 26rpx;
    margin-bottom: 5px;
}

.post-title{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;/*px 保持间距不改变 */
}

.post-image{
    margin-left: 16px;
    height: 340rpx;
    width: 100%;
    margin: auto 0;
    margin-bottom: 15px;
}

.post-content{
    color: #666;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
    letter-spacing: 2rpx;/*字间距*/
    line-height: 40rpx;/*行高*/
}

.post-like{
    font-size: 13px;
    display: flex;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;

}

.post-like-image{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like-font{
    vertical-align: middle;
    margin-right: 20px;
}